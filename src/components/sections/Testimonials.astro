---
import SectionHeader from '../SectionHeader.astro';

const testimonials = [
  {
    stars: 5,
    text: 'Tousgether a transformé notre modèle d\'acquisition. En 6 mois, notre réseau d\'affiliés a généré 40% de notre chiffre d\'affaires. Un vrai game-changer.',
    avatar: 'ML',
    name: 'Marie Laurent',
    role: 'CEO',
    company: 'BeautyBox',
    metric: '+40%',
    metricLabel: 'CA affiliés'
  },
  {
    stars: 5,
    text: 'L\'équipe a su comprendre nos besoins spécifiques et créer un plan MLM parfaitement adapté à notre marketplace B2B. Professionnalisme exemplaire.',
    avatar: 'TD',
    name: 'Thomas Dubois',
    role: 'Fondateur',
    company: 'ProConnect',
    metric: '2x',
    metricLabel: 'Croissance'
  },
  {
    stars: 5,
    text: 'Solution robuste, support réactif, et surtout des résultats concrets ! Notre coût d\'acquisition client a baissé de 60%.',
    avatar: 'SC',
    name: 'Sophie Chen',
    role: 'CMO',
    company: 'TechFlow SaaS',
    metric: '-60%',
    metricLabel: 'CAC'
  }
];
---

<section class="section testimonials" id="testimonials">
  <div class="container">
    <SectionHeader 
      tag="Témoignages"
      title="Ce que disent nos clients"
      subtitle="Découvrez comment nous avons aidé des entreprises à transformer leur croissance."
    />
    
    <div class="testimonials-grid">
      {testimonials.map((testimonial, index) => (
        <div class="testimonial-card animate-on-scroll" style={`--delay: ${index * 0.15}s`}>
          <!-- Quote decoration -->
          <div class="quote-decoration">
            <svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
            </svg>
          </div>

          <!-- Stars -->
          <div class="testimonial-stars">
            {[...Array(testimonial.stars)].map((_, i) => (
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            ))}
          </div>

          <!-- Quote -->
          <p class="testimonial-text">"{testimonial.text}"</p>

          <!-- Metric -->
          <div class="testimonial-metric">
            <span class="metric-value">{testimonial.metric}</span>
            <span class="metric-label">{testimonial.metricLabel}</span>
          </div>

          <!-- Author -->
          <div class="testimonial-author">
            <div class="author-avatar">
              <span>{testimonial.avatar}</span>
            </div>
            <div class="author-info">
              <span class="author-name">{testimonial.name}</span>
              <span class="author-role">{testimonial.role}, {testimonial.company}</span>
            </div>
          </div>

          <!-- Glow effect on hover -->
          <div class="card-glow"></div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .testimonials {
    background: linear-gradient(180deg, #fafafa 0%, #f5f5f7 100%);
    position: relative;
    overflow: hidden;
  }

  .testimonials::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 200px;
    background: linear-gradient(180deg, #fafafa 0%, transparent 100%);
    pointer-events: none;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 28px;
  }

  .testimonial-card {
    background: white;
    border-radius: 24px;
    padding: 40px;
    border: 1px solid rgba(0, 0, 0, 0.06);
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    animation-delay: var(--delay);
  }

  .testimonial-card:hover {
    transform: translateY(-12px);
    box-shadow: 
      0 12px 40px rgba(0, 0, 0, 0.08),
      0 0 0 1px rgba(128, 59, 133, 0.1);
  }

  .card-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 100%;
    background: linear-gradient(135deg, rgba(128, 59, 133, 0.03) 0%, transparent 60%);
    opacity: 0;
    transition: opacity 0.5s ease;
    pointer-events: none;
  }

  .testimonial-card:hover .card-glow {
    opacity: 1;
  }

  /* Quote decoration */
  .quote-decoration {
    position: absolute;
    top: 24px;
    right: 24px;
    color: rgba(128, 59, 133, 0.08);
    transition: all 0.4s ease;
  }

  .testimonial-card:hover .quote-decoration {
    color: rgba(128, 59, 133, 0.15);
    transform: scale(1.1);
  }

  /* Stars */
  .testimonial-stars {
    display: flex;
    gap: 4px;
    margin-bottom: 24px;
    color: #fbbf24;
  }

  .testimonial-stars svg {
    filter: drop-shadow(0 2px 4px rgba(251, 191, 36, 0.3));
  }

  /* Quote text */
  .testimonial-text {
    font-size: 17px;
    color: #1d1d1f;
    line-height: 1.7;
    margin-bottom: 28px;
    flex: 1;
    position: relative;
    z-index: 1;
  }

  /* Metric */
  .testimonial-metric {
    display: flex;
    align-items: baseline;
    gap: 8px;
    margin-bottom: 28px;
    padding: 16px 20px;
    background: linear-gradient(135deg, rgba(128, 59, 133, 0.06) 0%, rgba(232, 74, 138, 0.06) 100%);
    border-radius: 14px;
    position: relative;
    z-index: 1;
  }

  .metric-value {
    font-size: 28px;
    font-weight: 700;
    color: #803B85;
    letter-spacing: -0.02em;
  }

  .metric-label {
    font-size: 14px;
    color: #6e6e73;
    font-weight: 500;
  }

  /* Author */
  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 16px;
    position: relative;
    z-index: 1;
  }

  .author-avatar {
    width: 52px;
    height: 52px;
    background: linear-gradient(135deg, #803B85 0%, #E84A8A 100%);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 17px;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    box-shadow: 0 4px 12px rgba(128, 59, 133, 0.25);
  }

  .testimonial-card:hover .author-avatar {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 8px 24px rgba(128, 59, 133, 0.35);
  }

  .author-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .author-name {
    font-weight: 600;
    font-size: 16px;
    color: #1d1d1f;
  }

  .author-role {
    font-size: 14px;
    color: #86868b;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .testimonials-grid {
      grid-template-columns: 1fr;
      max-width: 600px;
      margin: 0 auto;
    }
  }

  @media (max-width: 768px) {
    .testimonial-card {
      padding: 32px;
    }

    .testimonial-text {
      font-size: 16px;
    }
  }
</style>
