<style>
  .solutions {
    background: #fbfbfd;
    overflow: hidden;
  }

  .bento-grid {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    grid-template-rows: auto auto auto;
    gap: 20px;
  }

  .bento-card {
    background: white;
    border-radius: 24px;
    border: 1px solid #e8e8ed;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.25, 0.1, 0.25, 1);
    position: relative;
  }

  .bento-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.12);
    border-color: rgba(128, 59, 133, 0.3);
  }

  /* Carte principale */
  .bento-main {
    grid-column: span 7;
    grid-row: span 2;
    background: linear-gradient(135deg, #1d1d1f 0%, #2d2d30 100%);
    color: white;
    display: flex;
    flex-direction: column;
    min-height: 480px;
    border: none;
  }

  .bento-main .card-glow {
    position: absolute;
    top: -50%;
    right: -30%;
    width: 80%;
    height: 80%;
    background: radial-gradient(circle, rgba(128, 59, 133, 0.4) 0%, transparent 60%);
    pointer-events: none;
    animation: pulse 4s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 0.5; transform: scale(1); }
    50% { opacity: 0.8; transform: scale(1.1); }
  }

  .bento-main .card-content {
    padding: 40px;
    flex: 1;
    position: relative;
    z-index: 1;
  }

  .card-badge {
    display: inline-block;
    background: linear-gradient(135deg, #E84A8A 0%, #9B59B6 100%);
    color: white;
    padding: 6px 16px;
    border-radius: 980px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 24px;
  }

  .card-icon-wrapper {
    margin-bottom: 20px;
  }

  .card-icon {
    width: 64px;
    height: 64px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #E84A8A;
    backdrop-filter: blur(10px);
  }

  .bento-main h3 {
    font-size: 28px;
    font-weight: 700;
    margin-bottom: 12px;
    letter-spacing: -0.02em;
  }

  .bento-main p {
    font-size: 16px;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.6;
    margin-bottom: 24px;
    max-width: 360px;
  }

  .feature-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .feature-list li {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 15px;
    color: rgba(255, 255, 255, 0.9);
  }

  .feature-list .check {
    width: 24px;
    height: 24px;
    background: rgba(232, 74, 138, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #E84A8A;
    font-size: 12px;
    font-weight: bold;
  }

  .card-visual {
    padding: 0 40px 40px;
    position: relative;
    z-index: 1;
  }

  .visual-tree {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .tree-node {
    width: 48px;
    height: 48px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }

  .tree-node.main {
    width: 56px;
    height: 56px;
    background: linear-gradient(135deg, #E84A8A 0%, #9B59B6 100%);
    font-size: 24px;
  }

  .tree-node.mini {
    width: 36px;
    height: 36px;
    font-size: 14px;
  }

  .bento-main:hover .tree-node:not(.main) {
    transform: scale(1.1);
  }

  .tree-line {
    width: 2px;
    height: 16px;
    background: rgba(255, 255, 255, 0.3);
  }

  .tree-row {
    display: flex;
    gap: 24px;
  }

  .tree-row.small {
    gap: 12px;
  }

  .tree-line-split {
    width: 80px;
    height: 16px;
    border-left: 2px solid rgba(255, 255, 255, 0.3);
    border-right: 2px solid rgba(255, 255, 255, 0.3);
    border-bottom: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 0 0 8px 8px;
  }

  /* Cartes secondaires */
  .bento-integration {
    grid-column: span 5;
    padding: 32px;
  }

  .bento-automation {
    grid-column: span 5;
    padding: 32px;
    display: flex;
    flex-direction: column;
  }

  .bento-support {
    grid-column: span 5;
    padding: 32px;
  }

  .bento-stats {
    grid-column: span 7;
    background: linear-gradient(135deg, #803B85 0%, #9B4BA0 100%);
    color: white;
    border: none;
  }

  .card-icon-small {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, rgba(128, 59, 133, 0.1) 0%, rgba(232, 74, 138, 0.1) 100%);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #803B85;
    margin-bottom: 20px;
    transition: all 0.3s ease;
  }

  .bento-card:hover .card-icon-small {
    transform: scale(1.1) rotate(5deg);
    background: linear-gradient(135deg, #803B85 0%, #E84A8A 100%);
    color: white;
  }

  .bento-card h3 {
    font-size: 20px;
    font-weight: 600;
    color: #1d1d1f;
    margin-bottom: 8px;
  }

  .bento-card p {
    font-size: 15px;
    color: #6e6e73;
    line-height: 1.5;
    margin: 0;
  }

  /* Platform Grid */
  .platform-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
    margin-top: 24px;
  }

  .platform-item {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 12px 16px;
    background: #fbfbfd;
    border-radius: 12px;
    font-size: 14px;
    font-weight: 500;
    color: #1d1d1f;
    transition: all 0.3s ease;
    border: 1px solid transparent;
  }

  .platform-item:hover {
    background: white;
    border-color: #803B85;
    transform: translateX(4px);
  }

  .platform-icon {
    font-size: 18px;
  }

  /* Automation Visual */
  .automation-visual {
    display: flex;
    flex-direction: column;
    gap: 16px;
    margin-top: 24px;
  }

  .auto-item {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .auto-icon {
    font-size: 20px;
    width: 32px;
  }

  .auto-bar {
    flex: 1;
    height: 8px;
    background: #f0f0f2;
    border-radius: 4px;
    overflow: hidden;
  }

  .auto-progress {
    height: 100%;
    background: linear-gradient(90deg, #803B85 0%, #E84A8A 100%);
    border-radius: 4px;
    animation: progressGrow 2s ease-out forwards;
    transform-origin: left;
  }

  @keyframes progressGrow {
    from { transform: scaleX(0); }
    to { transform: scaleX(1); }
  }

  .auto-item span {
    font-size: 13px;
    color: #6e6e73;
    min-width: 80px;
  }

  /* Support Features */
  .support-features {
    display: flex;
    flex-direction: column;
    gap: 16px;
    margin-top: 24px;
  }

  .support-item {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 16px;
    background: #fbfbfd;
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .support-item:hover {
    background: white;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transform: translateX(8px);
  }

  .support-emoji {
    font-size: 28px;
  }

  .support-item div {
    display: flex;
    flex-direction: column;
  }

  .support-item strong {
    font-size: 15px;
    color: #1d1d1f;
    margin-bottom: 2px;
  }

  .support-item span {
    font-size: 13px;
    color: #86868b;
  }

  /* Stats Card */
  .stats-content {
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding: 32px;
    height: 100%;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
  }

  .stat-number {
    font-size: 36px;
    font-weight: 800;
    letter-spacing: -0.02em;
  }

  .stat-label {
    font-size: 14px;
    opacity: 0.8;
    font-weight: 500;
  }

  .stat-divider {
    width: 1px;
    height: 48px;
    background: rgba(255, 255, 255, 0.2);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .bento-grid {
      grid-template-columns: 1fr 1fr;
    }

    .bento-main {
      grid-column: span 2;
      grid-row: span 1;
      min-height: auto;
    }

    .bento-integration,
    .bento-automation,
    .bento-support {
      grid-column: span 1;
    }

    .bento-stats {
      grid-column: span 2;
    }
  }

  @media (max-width: 768px) {
    .bento-grid {
      grid-template-columns: 1fr;
    }

    .bento-main,
    .bento-integration,
    .bento-automation,
    .bento-support,
    .bento-stats {
      grid-column: span 1;
    }

    .bento-main .card-content {
      padding: 32px;
    }

    .bento-main h3 {
      font-size: 24px;
    }

    .platform-grid {
      grid-template-columns: 1fr;
    }

    .stats-content {
      flex-wrap: wrap;
      gap: 24px;
    }

    .stat-divider {
      display: none;
    }

    .stat-number {
      font-size: 28px;
    }
  }
</style>
