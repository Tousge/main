<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 160px 0 120px;
    background: linear-gradient(180deg, #fafafa 0%, #ffffff 100%);
    overflow: hidden;
  }

  /* Premium Background */
  .hero-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
  }

  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.6;
  }

  .orb-1 {
    width: 800px;
    height: 800px;
    background: radial-gradient(circle, rgba(128, 59, 133, 0.25) 0%, transparent 70%);
    top: -300px;
    right: -200px;
    animation: floatOrb 20s ease-in-out infinite;
  }

  .orb-2 {
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(232, 74, 138, 0.15) 0%, transparent 70%);
    bottom: -200px;
    left: -200px;
    animation: floatOrb 15s ease-in-out infinite reverse;
  }

  .orb-3 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(155, 75, 160, 0.2) 0%, transparent 70%);
    top: 40%;
    left: 30%;
    animation: floatOrb 18s ease-in-out infinite 2s;
  }

  @keyframes floatOrb {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(30px, -30px) scale(1.05); }
    50% { transform: translate(-20px, 20px) scale(0.95); }
    75% { transform: translate(20px, 10px) scale(1.02); }
  }

  .grid-pattern {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(128, 59, 133, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(128, 59, 133, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse at center, black 20%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse at center, black 20%, transparent 70%);
  }

  /* Hero Container */
  .hero-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 80px;
    position: relative;
    z-index: 1;
  }

  .hero-content {
    max-width: 900px;
  }

  /* Premium Badge */
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 10px 20px;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(128, 59, 133, 0.15);
    border-radius: 100px;
    font-size: 14px;
    font-weight: 600;
    color: #803B85;
    margin-bottom: 32px;
    box-shadow: 0 4px 24px rgba(128, 59, 133, 0.1);
    opacity: 0;
    animation: fadeInDown 1s cubic-bezier(0.16, 1, 0.3, 1) 0.2s forwards;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: linear-gradient(135deg, #803B85, #E84A8A);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.2); opacity: 0.8; }
  }

  /* Hero Title */
  .hero-title {
    font-size: clamp(40px, 6vw, 68px);
    font-weight: 700;
    line-height: 1.05;
    letter-spacing: -0.04em;
    margin-bottom: 28px;
    color: #1d1d1f;
    opacity: 0;
    animation: fadeInUp 1s cubic-bezier(0.16, 1, 0.3, 1) 0.4s forwards;
  }

  .hero-title .highlight {
    position: relative;
    background: linear-gradient(135deg, #803B85 0%, #B855BD 50%, #E84A8A 100%);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradientMove 6s ease infinite;
  }

  @keyframes gradientMove {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(40px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes fadeInDown {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .hero-subtitle {
    font-size: 20px;
    font-weight: 400;
    line-height: 1.6;
    color: #6e6e73;
    margin-bottom: 48px;
    max-width: 620px;
    margin-left: auto;
    margin-right: auto;
    opacity: 0;
    animation: fadeInUp 1s cubic-bezier(0.16, 1, 0.3, 1) 0.6s forwards;
  }

  /* Hero CTA */
  .hero-cta {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
    opacity: 0;
    animation: fadeInUp 1s cubic-bezier(0.16, 1, 0.3, 1) 0.8s forwards;
  }

  /* Trust Section */
  .hero-trust {
    margin-top: 64px;
    opacity: 0;
    animation: fadeIn 1s cubic-bezier(0.16, 1, 0.3, 1) 1.2s forwards;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .trust-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 40px;
    padding: 24px 40px;
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.8);
    border-radius: 20px;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.04);
  }

  .trust-stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
  }

  .trust-stat .stat-value {
    font-size: 32px;
    font-weight: 700;
    color: #1d1d1f;
    letter-spacing: -0.02em;
  }

  .trust-stat .stat-label {
    font-size: 13px;
    color: #86868b;
    font-weight: 500;
  }

  .trust-divider {
    width: 1px;
    height: 40px;
    background: linear-gradient(180deg, transparent, #d2d2d7, transparent);
  }

  /* Hero Visual */
  .hero-visual {
    width: 100%;
    max-width: 1000px;
    position: relative;
    opacity: 0;
    animation: scaleIn 1.2s cubic-bezier(0.16, 1, 0.3, 1) 1s forwards;
  }

  @keyframes scaleIn {
    from { opacity: 0; transform: scale(0.92) translateY(40px); }
    to { opacity: 1; transform: scale(1) translateY(0); }
  }

  /* Platform Mockup */
  .platform-mockup {
    background: white;
    border-radius: 24px;
    box-shadow: 
      0 4px 24px rgba(0, 0, 0, 0.06),
      0 24px 80px rgba(0, 0, 0, 0.12);
    width: 100%;
    overflow: hidden;
    transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
    border: 1px solid rgba(0, 0, 0, 0.06);
  }

  .mockup-glow {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(128, 59, 133, 0.03) 0%, transparent 50%);
    pointer-events: none;
  }

  .platform-mockup:hover {
    transform: translateY(-12px) scale(1.01);
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.08),
      0 40px 100px rgba(128, 59, 133, 0.15);
  }

  .mockup-header {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 16px 20px;
    background: linear-gradient(180deg, #fafafa 0%, #f5f5f7 100%);
    border-bottom: 1px solid #e8e8ed;
  }

  .mockup-dots {
    display: flex;
    gap: 8px;
  }

  .mockup-dots span {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    transition: all 0.2s ease;
  }

  .mockup-dots span:first-child { background: #ff5f57; }
  .mockup-dots span:nth-child(2) { background: #febc2e; }
  .mockup-dots span:last-child { background: #28c840; }

  .platform-mockup:hover .mockup-dots span {
    transform: scale(1.1);
  }

  .mockup-title {
    font-size: 13px;
    font-weight: 600;
    color: #1d1d1f;
    flex: 1;
    text-align: center;
  }

  .mockup-badge {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 4px 10px;
    background: rgba(40, 200, 64, 0.1);
    border-radius: 100px;
    font-size: 11px;
    font-weight: 600;
    color: #28c840;
  }

  .mockup-badge::before {
    content: '';
    width: 6px;
    height: 6px;
    background: #28c840;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  .mockup-content {
    display: flex;
    min-height: 380px;
  }

  /* Sidebar */
  .mockup-sidebar {
    width: 64px;
    background: #1d1d1f;
    padding: 20px 12px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
  }

  .sidebar-logo {
    width: 36px;
    height: 36px;
    background: linear-gradient(135deg, #803B85, #E84A8A);
    border-radius: 10px;
    display: flex;
