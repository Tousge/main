---
import Logo from './Logo.astro';

interface Props {
  currentPage?: string;
}

const { currentPage = 'home' } = Astro.props;

const navLinks = [
  { href: '/#about', label: 'À propos' },
  { href: '/#why-mlm', label: 'Pourquoi le MLM' },
  { href: '/#solutions', label: 'Solutions' },
  { href: '/#process', label: 'Processus' },
  { href: '/#contact', label: 'Contact' },
];
---

<header role="banner">
  <nav class="navbar" role="navigation" aria-label="Navigation principale">
    <div class="container nav-container">
      <a href="/" class="logo" aria-label="Tousgether - Retour à l'accueil" title="Accueil Tousgether">
        <div class="logo-icon">
          <Logo />
        </div>
        <span class="logo-text">Tousgether</span>
      </a>
      
      <input type="checkbox" id="nav-toggle" class="nav-checkbox" aria-hidden="true">
      <label for="nav-toggle" class="nav-toggle" aria-label="Ouvrir le menu de navigation" aria-expanded="false" role="button">
        <span></span>
        <span></span>
        <span></span>
      </label>
      
      <ul class="nav-links">
        {navLinks.map(link => (
          <li>
            <a 
              href={link.href} 
              class:list={[
                'nav-link',
                { 'active': currentPage === link.href }
              ]}
            >
              {link.label}
            </a>
          </li>
        ))}
        <li class="nav-cta">
          <a href="/devis" class:list={['btn-nav', { 'active': currentPage === 'devis' }]}>
            <span>Demander un devis</span>
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<style>
  /* Hidden checkbox for CSS-only toggle */
  .nav-checkbox {
    display: none;
  }

  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: 16px 0;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: saturate(180%) blur(20px);
    -webkit-backdrop-filter: saturate(180%) blur(20px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.04);
    animation: slideDown 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  @keyframes slideDown {
    from { 
      opacity: 0; 
      transform: translateY(-20px); 
    }
    to { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }

  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 32px;
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  /* Logo */
  .logo {
    display: flex;
    align-items: center;
    gap: 10px;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .logo:hover {
    transform: translateY(-2px);
  }

  .logo-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
  }

  .logo:hover .logo-icon {
    transform: scale(1.05);
  }

  .logo-text {
    font-size: 18px;
    font-weight: 700;
    color: #1d1d1f;
    letter-spacing: -0.02em;
  }

  /* Nav Links */
  .nav-links {
    display: flex;
    align-items: center;
    gap: 8px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    color: #6e6e73;
    font-size: 14px;
    font-weight: 500;
    padding: 10px 16px;
    border-radius: 100px;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
    text-decoration: none;
  }

  .nav-link:hover {
    color: #1d1d1f;
    background: rgba(0, 0, 0, 0.04);
  }

  .nav-link.active {
    color: #803B85;
    background: rgba(128, 59, 133, 0.08);
  }

  /* CTA Button */
  .nav-cta {
    margin-left: 16px;
  }

  .btn-nav {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: linear-gradient(135deg, #803B85 0%, #9B4BA0 100%);
    color: white !important;
    padding: 10px 22px;
    border-radius: 100px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    box-shadow: 0 2px 8px rgba(128, 59, 133, 0.25);
    position: relative;
    overflow: hidden;
  }

  .btn-nav::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #9B4BA0 0%, #B855BD 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .btn-nav span,
  .btn-nav svg {
    position: relative;
    z-index: 1;
  }

  .btn-nav svg {
    transition: transform 0.3s ease;
  }

  .btn-nav:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(128, 59, 133, 0.35);
  }

  .btn-nav:hover::before {
    opacity: 1;
  }

  .btn-nav:hover svg {
    transform: translateX(4px);
  }

  /* Mobile Toggle */
  .nav-toggle {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 44px;
    height: 44px;
    background: rgba(0, 0, 0, 0.04);
    border: none;
    border-radius: 12px;
    cursor: pointer;
    gap: 5px;
    transition: all 0.3s ease;
  }

  .nav-toggle:hover {
    background: rgba(0, 0, 0, 0.08);
  }

  .nav-toggle span {
    display: block;
    width: 18px;
    height: 2px;
    background: #1d1d1f;
    border-radius: 2px;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    transform-origin: center;
  }

  /* Mobile Styles */
  @media (max-width: 900px) {
    .nav-links {
      position: fixed;
      top: 0;
      right: -100%;
      width: 100%;
      height: 100vh;
      height: 100dvh;
      background: white;
      flex-direction: column;
      justify-content: center;
      padding: 32px;
      gap: 12px;
      transition: right 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    }

    /* CSS-only menu toggle */
    .nav-checkbox:checked ~ .nav-links {
      right: 0;
    }

    .nav-checkbox:checked ~ .nav-toggle span:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }

    .nav-checkbox:checked ~ .nav-toggle span:nth-child(2) {
      opacity: 0;
      transform: scaleX(0);
    }

    .nav-checkbox:checked ~ .nav-toggle span:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
    }

    .nav-links li {
      width: 100%;
    }

    .nav-link {
      display: block;
      font-size: 24px;
      font-weight: 600;
      text-align: center;
      padding: 16px;
      color: #1d1d1f;
    }

    .nav-link:hover {
      background: rgba(128, 59, 133, 0.08);
      color: #803B85;
    }

    .nav-cta {
      margin-left: 0;
      margin-top: 16px;
      width: 100%;
    }

    .btn-nav {
      width: 100%;
      justify-content: center;
      font-size: 17px;
      padding: 16px 28px;
    }

    .nav-toggle {
      display: flex;
      z-index: 100;
    }
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 20px;
    }
    
    .navbar {
      padding: 12px 0;
    }
  }
</style>
