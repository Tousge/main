---
import Logo from './Logo.astro';

const currentYear = new Date().getFullYear();

const solutionsLinks = [
  { href: '/#solutions', label: 'Plan MLM personnalisé' },
  { href: '/#solutions', label: 'Intégration' },
  { href: '/#solutions', label: 'Automatisation' },
  { href: '/#solutions', label: 'Formation' },
];

const companyLinks = [
  { href: '/#about', label: 'À propos' },
  { href: '/#testimonials', label: 'Témoignages' },
  { href: '/#contact', label: 'Contact' },
];

const legalLinks = [
  { href: '/mentions-legales', label: 'Mentions légales' },
  { href: '/cgv', label: 'CGV' },
  { href: '/politique-confidentialite', label: 'Politique de confidentialité' },
];
---

<footer class="footer" role="contentinfo">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-brand">
        <a href="/" class="logo">
          <Logo />
          <span>Tousgether</span>
        </a>
        <p>
          Expert en création et déploiement de systèmes MLM digitaux 
          pour les entreprises ambitieuses.
        </p>
      </div>
      
      <div class="footer-links">
        <h4>Solutions</h4>
        <ul>
          {solutionsLinks.map(link => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>
      
      <div class="footer-links">
        <h4>Entreprise</h4>
        <ul>
          {companyLinks.map(link => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>
      
      <div class="footer-links">
        <h4>Contact</h4>
        <ul>
          <li><a href="mailto:contact@tousgether.com" aria-label="Envoyer un email à Tousgether">contact@tousgether.com</a></li>
          <li><address class="not-italic">6 rue Rose Dieng-Kuntz<br>44300 Nantes</address></li>
        </ul>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {currentYear} Tousgether. Tous droits réservés.</p>
      <div class="footer-legal">
        {legalLinks.map(link => (
          <a href={link.href}>{link.label}</a>
        ))}
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: #f5f5f7;
    color: #1d1d1f;
    padding: 60px 0 32px;
    border-top: 1px solid #e8e8ed;
  }

  .container {
    width: 100%;
    max-width: 1120px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr;
    gap: 48px;
    margin-bottom: 48px;
  }

  .footer-brand .logo {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 18px;
    font-weight: 600;
    color: #1d1d1f;
    text-decoration: none;
    margin-bottom: 16px;
  }

  .footer-brand p {
    color: #6e6e73;
    font-size: 14px;
    line-height: 1.6;
    margin-bottom: 0;
  }

  .footer-links h4 {
    font-size: 13px;
    font-weight: 600;
    margin-bottom: 20px;
    color: #1d1d1f;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer-links a,
  .footer-links li {
    color: #6e6e73;
    font-size: 14px;
    text-decoration: none;
    transition: all 0.2s cubic-bezier(0.25, 0.1, 0.25, 1);
  }

  .footer-links a:hover {
    color: #803B85;
    transform: translateX(4px);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 32px;
    border-top: 1px solid #e8e8ed;
  }

  .footer-bottom p {
    color: #86868b;
    font-size: 13px;
    margin: 0;
  }

  .footer-legal {
    display: flex;
    gap: 24px;
  }

  .footer-legal a {
    color: #86868b;
    font-size: 13px;
    text-decoration: none;
    transition: color 0.2s cubic-bezier(0.25, 0.1, 0.25, 1);
  }

  .footer-legal a:hover {
    color: #803B85;
  }

  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 32px;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 16px;
    }
  }
</style>

