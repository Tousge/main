<style>
  .mlm-schema {
    background: white;
  }

  .schema-container {
    max-width: 700px;
    margin: 0 auto;
  }

  .mlm-tree {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 48px 32px;
    background: linear-gradient(135deg, #fbfbfd 0%, white 100%);
    border-radius: 24px;
    border: 1px solid #e8e8ed;
    margin-bottom: 32px;
  }

  .tree-level {
    display: flex;
    justify-content: center;
    gap: 48px;
    width: 100%;
  }

  .level-2 {
    gap: 16px;
  }

  .tree-node {
    background: white;
    border-radius: 12px;
    padding: 16px 24px;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    border: 1px solid #e8e8ed;
    min-width: 120px;
    transition: all 0.4s cubic-bezier(0.25, 0.1, 0.25, 1);
  }

  .tree-node:hover {
    transform: translateY(-4px) scale(1.05);
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.12);
  }

  .tree-node.node-main {
    background: linear-gradient(135deg, #803B85 0%, #6A2F6E 100%);
    color: white;
    border: none;
    box-shadow: 0 8px 30px rgba(128, 59, 133, 0.3);
  }

  .tree-node.node-main:hover {
    box-shadow: 0 12px 40px rgba(128, 59, 133, 0.3);
  }

  .tree-node.small {
    padding: 10px 14px;
    min-width: 90px;
  }

  .node-avatar {
    font-size: 24px;
    display: block;
    margin-bottom: 6px;
  }

  .tree-node.small .node-avatar {
    font-size: 18px;
    margin-bottom: 4px;
  }

  .node-label {
    display: block;
    font-weight: 600;
    font-size: 14px;
    margin-bottom: 4px;
  }

  .tree-node.small .node-label {
    font-size: 12px;
  }

  .node-commission {
    display: block;
    font-size: 11px;
    opacity: 0.7;
  }

  .tree-connectors {
    display: flex;
    justify-content: center;
    height: 32px;
    position: relative;
  }

  .level-1-conn {
    width: 160px;
  }

  .level-1-conn::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    width: 2px;
    height: 16px;
    background: #803B85;
    transform: translateX(-50%);
  }

  .level-1-conn .connector {
    width: 80px;
    height: 2px;
    background: #803B85;
    position: absolute;
    top: 16px;
  }

  .level-1-conn .connector.left { right: 50%; }
  .level-1-conn .connector.right { left: 50%; }

  .level-1-conn .connector::after {
    content: '';
    position: absolute;
    bottom: 0;
    width: 2px;
    height: 16px;
    background: #803B85;
  }

  .level-1-conn .connector.left::after { left: 0; }
  .level-1-conn .connector.right::after { right: 0; }

  .level-2-conn {
    width: 100%;
    max-width: 500px;
  }

  .connector-group {
    position: absolute;
    width: 40%;
    height: 100%;
  }

  .connector-group.left { left: 12%; }
  .connector-group.right { right: 12%; }

  .connector-group::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    width: 2px;
    height: 16px;
    background: #d2d2d7;
    transform: translateX(-50%);
  }

  .connector-group .connector {
    position: absolute;
    top: 16px;
    width: 50%;
    height: 2px;
    background: #d2d2d7;
  }

  .connector-group .connector:first-child { right: 50%; }
  .connector-group .connector:last-child { left: 50%; }

  .connector-group .connector::after {
    content: '';
    position: absolute;
    bottom: 0;
    width: 2px;
    height: 16px;
    background: #d2d2d7;
  }

  .connector-group .connector:first-child::after { left: 0; }
  .connector-group .connector:last-child::after { right: 0; }

  .schema-legend {
    display: flex;
    justify-content: center;
    gap: 32px;
    flex-wrap: wrap;
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 14px;
    color: #6e6e73;
  }

  .legend-dot {
    width: 14px;
    height: 14px;
    border-radius: 50%;
    transition: transform 0.2s cubic-bezier(0.25, 0.1, 0.25, 1);
  }

  .legend-item:hover .legend-dot {
    transform: scale(1.3);
  }

  .legend-dot.purchase { background: #1d1d1f; }
  .legend-dot.sales { background: #803B85; }
  .legend-dot.subscription { background: #d2d2d7; }

  @media (max-width: 768px) {
    .level-2 {
      flex-wrap: wrap;
      gap: 12px;
    }

    .tree-node.small {
      min-width: 70px;
      padding: 8px 10px;
    }
  }

  @media (max-width: 480px) {
    .tree-level.level-1 {
      flex-direction: column;
      gap: 16px;
    }

    .level-1-conn, .level-2-conn {
      display: none;
    }

    .level-2 {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

