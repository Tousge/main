---
interface Props {
  tag?: string;
  title: string;
  subtitle?: string;
  class?: string;
  align?: 'center' | 'left';
  dark?: boolean;
}

const { 
  tag, 
  title, 
  subtitle, 
  class: className = '',
  align = 'center',
  dark = false
} = Astro.props;
---

<div class:list={[
  'section-header',
  className,
  { 'align-left': align === 'left' },
  { 'dark': dark }
]}>
  {tag && (
    <div class="tag-wrapper">
      <span class="section-tag">
        <span class="tag-dot"></span>
        {tag}
      </span>
    </div>
  )}
  <h2 class="section-title">{title}</h2>
  {subtitle && <p class="section-subtitle">{subtitle}</p>}
  <div class="title-decoration"></div>
</div>

<style>
  .section-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 100px;
    position: relative;
  }

  .section-header.align-left {
    text-align: left;
    margin-left: 0;
  }

  /* Tag */
  .tag-wrapper {
    margin-bottom: 20px;
  }

  .section-tag {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 10px 20px;
    background: linear-gradient(135deg, rgba(128, 59, 133, 0.08) 0%, rgba(232, 74, 138, 0.08) 100%);
    border: 1px solid rgba(128, 59, 133, 0.15);
    border-radius: 100px;
    color: #803B85;
    font-size: 13px;
    font-weight: 600;
    letter-spacing: 0.06em;
    text-transform: uppercase;
  }

  .section-header.dark .section-tag {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.15);
    color: white;
  }

  .tag-dot {
    width: 8px;
    height: 8px;
    background: linear-gradient(135deg, #803B85, #E84A8A);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.3); opacity: 0.7; }
  }

  .section-header.dark .tag-dot {
    background: linear-gradient(135deg, #E84A8A, #B855BD);
  }

  /* Title */
  .section-title {
    font-size: clamp(36px, 5vw, 56px);
    font-weight: 700;
    color: #1d1d1f;
    margin-bottom: 24px;
    line-height: 1.1;
    letter-spacing: -0.04em;
  }

  .section-header.dark .section-title {
    color: white;
  }

  /* Subtitle */
  .section-subtitle {
    font-size: 19px;
    color: #6e6e73;
    line-height: 1.6;
    margin: 0;
    max-width: 600px;
  }

  .section-header:not(.align-left) .section-subtitle {
    margin-left: auto;
    margin-right: auto;
  }

  .section-header.dark .section-subtitle {
    color: rgba(255, 255, 255, 0.7);
  }

  /* Decoration */
  .title-decoration {
    position: absolute;
    bottom: -40px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 4px;
    background: linear-gradient(90deg, #803B85, #E84A8A);
    border-radius: 2px;
    opacity: 0.3;
  }

  .section-header.align-left .title-decoration {
    left: 0;
    transform: none;
  }

  .section-header.dark .title-decoration {
    background: linear-gradient(90deg, #E84A8A, #B855BD);
    opacity: 0.5;
  }

  @media (max-width: 768px) {
    .section-header {
      margin-bottom: 60px;
    }

    .section-tag {
      font-size: 11px;
      padding: 8px 16px;
    }

    .section-subtitle {
      font-size: 17px;
    }

    .title-decoration {
      bottom: -24px;
      width: 40px;
    }
  }
</style>
