---
import SectionHeader from '../SectionHeader.astro';

const advantages = [
  {
    icon: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
      <path d="M2 17l10 5 10-5"></path>
      <path d="M2 12l10 5 10-5"></path>
    </svg>`,
    title: 'Expertise technique + stratégique',
    description: 'Alliance unique de compétences business et développement'
  },
  {
    icon: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
    </svg>`,
    title: 'Modèles 100% conformes',
    description: 'Plans MLM respectant la législation française et européenne'
  },
  {
    icon: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
    </svg>`,
    title: 'Automatisation native',
    description: 'Systèmes 100% automatisés dès le premier jour'
  },
  {
    icon: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
      <line x1="3" y1="9" x2="21" y2="9"></line>
      <line x1="9" y1="21" x2="9" y2="9"></line>
    </svg>`,
    title: 'Expérience SaaS & plateformes',
    description: 'Expertise dans les modèles multi-services complexes'
  },
  {
    icon: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
    </svg>`,
    title: 'Support long terme',
    description: 'Accompagnement continu après le lancement'
  }
];
---

<section class="section advantages" id="advantages">
  <div class="container">
    <SectionHeader 
      tag="Pourquoi nous"
      title="Nos avantages"
      subtitle="Ce qui nous différencie des autres solutions du marché."
    />
    
    <div class="advantages-wrapper">
      <div class="advantages-grid">
        {advantages.map((advantage, index) => (
          <div class="advantage-item animate-on-scroll" style={`--delay: ${index * 0.1}s`}>
            <div class="advantage-icon" set:html={advantage.icon} />
            <div class="advantage-content">
              <h4>{advantage.title}</h4>
              <p>{advantage.description}</p>
            </div>
            <div class="advantage-arrow">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="9 18 15 12 9 6"></polyline>
              </svg>
            </div>
          </div>
        ))}
      </div>

      <!-- Central visual -->
      <div class="center-visual">
        <div class="visual-ring ring-1"></div>
        <div class="visual-ring ring-2"></div>
        <div class="visual-ring ring-3"></div>
        <div class="visual-core">
          <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
            <polyline points="22 4 12 14.01 9 11.01"></polyline>
          </svg>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .advantages {
    background: white;
    position: relative;
    overflow: hidden;
  }

  .advantages::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(128, 59, 133, 0.1), transparent);
  }

  .advantages-wrapper {
    position: relative;
    max-width: 1000px;
    margin: 0 auto;
  }

  /* Grid */
  .advantages-grid {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  /* Item */
  .advantage-item {
    display: flex;
    align-items: center;
    gap: 24px;
    padding: 28px 32px;
    background: #fafafa;
    border-radius: 20px;
    border: 1px solid transparent;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    cursor: pointer;
    animation-delay: var(--delay);
  }

  .advantage-item:hover {
    background: white;
    border-color: rgba(128, 59, 133, 0.15);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.06);
    transform: translateX(8px);
  }

  /* Icon */
  .advantage-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, rgba(128, 59, 133, 0.1) 0%, rgba(232, 74, 138, 0.1) 100%);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #803B85;
    flex-shrink: 0;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .advantage-item:hover .advantage-icon {
    background: linear-gradient(135deg, #803B85 0%, #E84A8A 100%);
    color: white;
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 8px 24px rgba(128, 59, 133, 0.3);
  }

  /* Content */
  .advantage-content {
    flex: 1;
  }

  .advantage-content h4 {
    font-size: 18px;
    font-weight: 600;
    color: #1d1d1f;
    margin-bottom: 6px;
  }

  .advantage-content p {
    font-size: 15px;
    color: #6e6e73;
    line-height: 1.5;
    margin: 0;
  }

  /* Arrow */
  .advantage-arrow {
    width: 40px;
    height: 40px;
    background: #f0f0f5;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #86868b;
    flex-shrink: 0;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .advantage-item:hover .advantage-arrow {
    background: #803B85;
    color: white;
    transform: translateX(4px);
  }

  /* Center Visual */
  .center-visual {
    position: absolute;
    top: 50%;
    right: -80px;
    transform: translateY(-50%);
    width: 300px;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;
  }

  .visual-ring {
    position: absolute;
    border-radius: 50%;
    border: 1px solid rgba(128, 59, 133, 0.1);
  }

  .ring-1 {
    width: 100%;
    height: 100%;
    animation: pulseRing 4s ease-in-out infinite;
  }

  .ring-2 {
    width: 70%;
    height: 70%;
    animation: pulseRing 4s ease-in-out infinite 0.5s;
  }

  .ring-3 {
    width: 40%;
    height: 40%;
    animation: pulseRing 4s ease-in-out infinite 1s;
  }

  @keyframes pulseRing {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.1); opacity: 0.5; }
  }

  .visual-core {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #803B85 0%, #E84A8A 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    box-shadow: 0 12px 40px rgba(128, 59, 133, 0.4);
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-12px); }
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .center-visual {
      display: none;
    }

    .advantages-wrapper {
      max-width: 700px;
    }
  }

  @media (max-width: 768px) {
    .advantage-item {
      padding: 24px;
    }

    .advantage-arrow {
      display: none;
    }
  }
</style>
